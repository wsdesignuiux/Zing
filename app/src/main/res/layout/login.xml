<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:scrollbars="none"
    tools:context="com.example.wolfsoft3.zing.Login">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <TextView
        android:fontFamily="@font/roboto_medium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:gravity="center"
        android:layout_marginRight="35dp"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="140dp"
        android:textColor="@color/welcome"
        android:text="Welcome Back!"/>


    <TextView
        android:fontFamily="@font/roboto_regular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#7a7a7a"
        android:layout_marginRight="35dp"
        android:layout_marginLeft="35dp"
        android:textSize="15sp"
        android:layout_marginTop="50dp"
        android:text="login with"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginRight="35dp"
            android:layout_marginLeft="35dp"
            android:orientation="horizontal">


            <ImageView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:paddingLeft="15dp"
                android:layout_marginBottom="2dp"
                android:layout_marginTop="2dp"
                android:paddingRight="15dp"
                android:background="@drawable/facebook_ract"
                android:src="@drawable/ic_facebook"/>

            <android.support.v7.widget.CardView
                android:layout_weight="1"
                android:layout_marginRight="15dp"
                android:layout_width="0dp"
                app:cardCornerRadius="8dp"
                android:elevation="2dp"
                android:layout_marginBottom="2dp"
                android:layout_marginTop="2dp"
                app:cardBackgroundColor="@color/white"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="20dp"
                    android:layout_gravity="center"
                    android:paddingBottom="20dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:src="@drawable/ic_google"/>

            </android.support.v7.widget.CardView>

            <ImageView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:backgroundTint="#00aced"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:paddingLeft="15dp"
                android:layout_marginBottom="2dp"
                android:layout_marginTop="2dp"
                android:paddingRight="15dp"
                android:background="@drawable/facebook_ract"
                android:src="@drawable/ic_twitter"/>


        </LinearLayout>

    <TextView
        android:fontFamily="@font/roboto_regular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:layout_marginRight="35dp"
        android:layout_marginLeft="35dp"
        android:textColor="#7a7a7a"
        android:layout_marginTop="45dp"
        android:text="or"/>


        <android.support.design.widget.TextInputLayout
            style="@style/StyledTilEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="35dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp">

            <EditText
                android:fontFamily="@font/roboto_regular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="email"
                android:inputType="text"
                android:maxLines="1"
                android:paddingBottom="30dp"
                android:textColor="@color/black"
                android:textSize="15sp" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            style="@style/StyledTilEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="35dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="15dp">

            <EditText
                android:fontFamily="@font/roboto_regular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="password"
                android:inputType="text"
                android:paddingBottom="30dp"
                android:maxLines="1"
                android:textColor="@color/black"
                android:textSize="15sp" />

        </android.support.design.widget.TextInputLayout>
    <TextView
        android:fontFamily="@font/roboto_regular"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Login"
        android:background="@drawable/login_ract"
        android:gravity="center"
        android:paddingBottom="18dp"
        android:paddingTop="18dp"
        android:layout_marginRight="35dp"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="30dp"
        android:textColor="@color/white"
        android:textSize="15sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="60dp"
            android:layout_marginRight="35dp"
            android:layout_marginLeft="35dp"
            android:orientation="horizontal">

            <TextView
                android:fontFamily="@font/roboto_regular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="need an account?"
                android:textColor="#7a7a7a"
                android:textSize="15sp"/>


            <TextView
                android:fontFamily="@font/roboto_regular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="signup"
                android:paddingLeft="30dp"
                android:textColor="#0960bd"
                android:textSize="15sp"/>

        </LinearLayout>

    </LinearLayout>

</ScrollView>
