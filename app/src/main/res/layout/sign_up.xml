<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:scrollbars="none"
    tools:context="com.example.wolfsoft3.zing.Login">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="35dp"
        android:layout_marginLeft="35dp"
        android:orientation="vertical">

        <TextView
            android:fontFamily="@font/roboto_medium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="23sp"
            android:gravity="center"
            android:layout_marginTop="130dp"
            android:textColor="@color/welcome"
            android:text="Welcome to Zing"/>


        <TextView
            android:fontFamily="@font/roboto_regular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#7a7a7a"
            android:textSize="15sp"
            android:layout_marginTop="100dp"
            android:text="get started with"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">


            <ImageView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:paddingLeft="15dp"
                android:layout_marginBottom="2dp"
                android:layout_marginTop="2dp"
                android:paddingRight="15dp"
                android:background="@drawable/facebook_ract"
                android:src="@drawable/ic_facebook"/>

 <android.support.v7.widget.CardView
     android:layout_weight="1"
     android:layout_marginRight="15dp"
     android:layout_width="0dp"
     app:cardCornerRadius="8dp"
     android:elevation="2dp"
     android:layout_marginBottom="2dp"
     android:layout_marginTop="2dp"
     app:cardBackgroundColor="@color/white"
     android:layout_height="wrap_content">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="20dp"
                android:layout_gravity="center"
                android:paddingBottom="20dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:src="@drawable/ic_google"/>

 </android.support.v7.widget.CardView>

            <ImageView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:backgroundTint="#00aced"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:paddingLeft="15dp"
                android:layout_marginBottom="2dp"
                android:layout_marginTop="2dp"
                android:paddingRight="15dp"
                android:background="@drawable/facebook_ract"
                android:src="@drawable/ic_twitter"/>


        </LinearLayout>

        <TextView
            android:fontFamily="@font/roboto_regular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="#7a7a7a"
            android:layout_marginTop="35dp"
            android:text="or sign up with"/>

        <TextView
            android:fontFamily="@font/roboto_regular"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Email id"
            android:background="@drawable/login_ract"
            android:gravity="center"
            android:paddingBottom="18dp"
            android:paddingTop="18dp"
            android:layout_marginTop="21dp"
            android:textColor="@color/white"
            android:textSize="15sp"/>

        <TextView
            android:fontFamily="@font/roboto_regular"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/login"
            android:layout_marginTop="190dp"
            android:layout_marginBottom="55dp"
            android:textSize="15sp"/>

    </LinearLayout>

</ScrollView>