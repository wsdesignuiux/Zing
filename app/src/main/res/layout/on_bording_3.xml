<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/onboarding_3"
    tools:context="com.example.wolfsoft3.zing.OnBording_3">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

    <TextView
        android:fontFamily="@font/roboto_regular"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Welcome to Zing UI Kit"
        android:textSize="24dp"
        android:gravity="center"
        android:textColor="@color/white"/>


    <TextView
        android:fontFamily="@font/roboto_light"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Zing UI Kit is a freebie, designed\nas a part of a 365 Days Design\nChallenge - Project365!"
        android:textSize="15sp"
        android:lineSpacingExtra="8.7sp"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:textColor="#ccffffff"/>
    </LinearLayout>

    <TextView
        android:fontFamily="@font/roboto_regular"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:layout_marginBottom="45dp"
        android:layout_marginRight="35dp"
        android:layout_marginLeft="35dp"
        android:background="@drawable/getstarted_ract"
        android:text="Get started"/>

</RelativeLayout>
