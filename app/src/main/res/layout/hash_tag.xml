            app:tabIndicatorColor="#0960bd"
            app:tabMode="scrollable"
            android:layout_marginLeft="20dp"
            app:tabSelectedTextColor="#80323643"
            app:tabTextAppearance="@style/MyMenuTextAppearance1"
            app:tabTextColor="#80323643" />

